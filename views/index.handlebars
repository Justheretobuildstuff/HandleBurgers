<h1>Eat-da-Burger!</h1>

<ul>
  {{#each cats}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Devour?</label><br>
    <input type="radio" name="sleepy" value="1" checked><br>
    <input type="radio" name="sleepy" value="0"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>